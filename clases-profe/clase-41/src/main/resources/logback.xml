<configuration>

    <appender name="CONSOLA" class="ch.qos.logback.core.ConsoleAppender">
        <!-- Layout del log -->
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>EDUCACION-IT - %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
        </layout>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/logfile.log</file> <!-- Ruta del archivo de log -->
        <!-- Layout del log -->
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>ARCHIVO-LOG %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
        </layout>
    </appender>

    <root level="ERROR">
        <appender-ref ref="CONSOLA" /> <!-- Refiriendo al appender para la consola -->
        <appender-ref ref="FILE" /> <!-- Refiriendo al appender para el archivo -->
    </root>

</configuration>
